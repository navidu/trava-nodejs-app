<!-- views/partials/sections/contact-form.ejs -->
<form method="post" class="get-quote-form clearfix" action="/contactus">
    <div class="form-group">
        <input type="text" class="form-control" id="" aria-describedby=""
               placeholder="Name (Required)" name="firstName">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="" aria-describedby=""
               placeholder="Email (Required)" name="email">
    </div>
    <div class="form-group">
        <input type="text" class="form-control" id="" aria-describedby="" placeholder="Subject" name="subject">
    </div>
    <div class="form-group">
    <textarea class="form-control" id="" rows="6"
              placeholder="Describe your project in detail..." name="description">
    </textarea>
    </div>
    <button type="submit" class="btn btn-light-def float-right">Submit</button>
</form>